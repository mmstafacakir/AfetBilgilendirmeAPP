<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infoPage">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        style="@style/View"/>

    <GridLayout
        android:id="@+id/cardGrid"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:columnCount="1"
        android:rowCount="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@+id/topView">

        <androidx.cardview.widget.CardView
            android:id="@+id/onClickDeneme"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_margin="12dp"
            android:layout_row="0"
            android:layout_column="0"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/fire"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    style="@style/Text"
                    android:id="@+id/infoText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <GridLayout
        android:id="@+id/buttonsGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_below="@+id/cardGrid"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp"
        android:alignmentMode="alignBounds">

        <!-- Button 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/infoBack"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            style="@style/Button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            android:layout_row="0"
            android:layout_column="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Button 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnMainPage"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            android:layout_row="0"
            android:layout_column="1"
            style="@style/Button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text"
                    android:text="Ana sayfa"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Button 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/infoNext"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            style="@style/Button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            android:layout_row="0"
            android:layout_column="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_next"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <TextView
        android:id="@+id/mainText"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YangÄ±n"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/InfoPageBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_alignLeft="@+id/mainText"
        android:gravity="center"
        style="@style/Button"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_prev"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/InfoPageSettings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_alignRight="@+id/mainText"
        android:gravity="center"
        style="@style/Button"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_margin="10dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>